<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/com.soulware.youme"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg_app_gray">
    <!--故事容器-->
    <com.soulware.youme.ui.controls.viewflow.ViewFlow
        android:id="@+id/story_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/timeline_frame"/>
    <!--时间线-->
    <RelativeLayout
        android:id="@+id/timeline_frame"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/top_bar_frame"
        android:background="@drawable/bg_timeline">
        <com.soulware.youme.ui.controls.viewflow.TitleFlowIndicator
            android:id="@+id/timeline_indic"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            app:footerLineHeight="2dp"
            app:footerTriangleHeight="10dp"
            app:textColor="@color/light_blue"
            app:selectedColor="@color/dark_blue"
            app:footerColor="@color/dark_blue"
            app:titlePadding="10dp"
            app:textSize="14sp"
            app:selectedSize="20sp"
            app:clipPadding="5dp"/>
    </RelativeLayout>
    <!--阴影-->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/top_bar_frame"
        android:background="@drawable/shadow_span_horizontal"/>
    <!--顶栏-->
    <RelativeLayout
        android:id="@+id/top_bar_frame"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_bar_blue">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/logo_simple"/>
        <!--添加按钮-->
        <ImageView
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/top_btn"
            android:layout_centerVertical="true"
            android:background="@drawable/span_blue_bar"/>
        <Button
            android:id="@+id/top_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/btn_add"/>
    </RelativeLayout>
</RelativeLayout>